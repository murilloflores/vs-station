<!DOCTYPE html>
<html>
<head>
  <title>VS Station</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    '//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js' %>
  <%= csrf_meta_tags %>
</head>
<body>

   <div class="container">
    <div class="header clearfix">
      <div class="pull-right login-info">
        
      </div>
      <h3 class="text-muted">VS Station</h3>
    </div>

    <% if notice %>
      <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= notice %>.
      </div>
    <% end %>
    
    <% if alert %>
      <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= alert %>.
      </div>
    <% end %>

    <%= yield %>

    <footer class="footer">
      <p>&copy; Very Simple Softwares - 2015</p>
    </footer>


  </div> <!-- /container -->

</body>

</html>
