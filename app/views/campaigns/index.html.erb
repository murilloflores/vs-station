
<h2>Your campaigns</h2>
<br>

<% if @campaigns.size > 0 %>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th style="text-align: center">Sync with linked services?</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @campaigns.each do |campaign| %>
        <tr>
          <td><%= link_to campaign.name, campaign %></td>
          <td style="text-align: center">
            <%= campaign.sync_with_salesforce? ? 'Yes' : 'No' %>
          </td>
          <td>
            <div style="float:right;">
              <%= link_to 'Edit', edit_campaign_path(campaign), :class => 'campaign-action-link' %>|
              <%= link_to 'Delete', campaign, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p> You have no campaigns yet. Create a new one clicking in the button below to start collecting leads </p>
<% end %>

<br>

<%= link_to 'New Campaign', new_campaign_path, :class => 'btn btn-success' %>

<p> 
  <br>
</p>

