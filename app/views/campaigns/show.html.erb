<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @campaign.name %>
</p>

<p>
  <strong>New leads url: </strong>
  <%= new_campaign_lead_path(@campaign, :only_path => false) %>
</p>

<h1>Listing Leads</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Company</th>
      <th>Job title</th>
      <th>Phone</th>
      <th>Website</th>
      <th colspan="3"></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @campaign.leads.each do |lead| %>
      <tr>
        <td><%= lead.name %></td>
        <td><%= lead.last_name %></td>
        <td><%= lead.email %></td>
        <td><%= lead.company %></td>
        <td><%= lead.job_title %></td>
        <td><%= lead.phone %></td>
        <td><%= lead.website %></td>
        <td><%= link_to 'Show', campaign_lead_path(@campaign, lead) %></td>
        <td><%= link_to 'Edit', edit_campaign_lead_path(@campaign, lead) %></td>
        <td><%= link_to 'Destroy', [@campaign, lead], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% if current_client.is_connected_to_salesforce %>
          <% if lead.is_synced_with_salesforce %>
            <td> <%= link_to 'Remove from salesforce', campaign_lead_remove_from_salesforce_path(@campaign, lead.id) %> </td>
          <% else %>
            <td> <%= link_to 'Send to salesforce', campaign_lead_send_to_salesforce_path(@campaign, lead.id) %> </td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_campaign_path(@campaign) %> |
