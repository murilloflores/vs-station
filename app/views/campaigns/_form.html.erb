<%= form_for(@campaign) do |f| %>
  <% if @campaign.errors.any? %>

    <div class="alert alert-danger" role="alert">
      <p> <strong>Oh snap!</strong> <%= pluralize(@campaign.errors.count, "error") %> prohibited this campaign from being saved: </p>
      <p>
        <ul>
        <% @campaign.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </p>
    </div>
  <% end %>

  <div class="field form-group form-input-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>

  <div class="form-group form-input-group checkbox">
    <label>
    <%= f.check_box :sync_with_salesforce, :disabled => !(@campaign.client && @campaign.client.is_connected_to_salesforce) %> Sync with linked services
    </label>
  </div>

  <div class="actions form-input-group">
    <%= f.submit :class => ['btn', 'btn-success']%>
  </div>
<% end %>
